<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin_horizontal"
        android:layout_marginTop="@dimen/layout_margin_vertical"
        android:background="@drawable/button_background"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding_10dp">

        <ImageView
            android:id="@+id/topicImage"
            android:layout_width="@dimen/topic_img_size"
            android:layout_height="@dimen/topic_img_size"
            android:src="@drawable/elife_logo" />

        <TextView
            android:id="@+id/topicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_top_10dp"
            android:fontFamily="@font/ubuntu_bold"
            android:includeFontPadding="false"
            android:maxLines="3"
            android:text="@string/topic_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/content_txt_size" />

    </LinearLayout>
</layout>